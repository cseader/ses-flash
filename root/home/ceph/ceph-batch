#!/bin/bash
#
# ceph-batch
# 
# author cs@suse.com
#
####################

# Global variables
nodes="node1 node2 node3"
anodes=($nodes)
osd=(vdb vdc)

# ceph-deploy install
ceph-deploy install $nodes

# ceph-deploy new
ceph-deploy new $nodes

# ceph-deploy mon create-initial
# Create the initial monitor service on already created monitor nodes
ceph-deploy mon create-initial

# Function discovering OSD's (availabled disks not /)
#discover_osd ()
# rootdisk=`mount | grep "on \/ " | awk {'print $1'}`
# alldisks=`parted -l | grep "Disk \/" | awk {'print $2'}`

# clean disks
for i in "${osd[@]}"; do
  for n in "${anodes[@]}"; do
    ceph-deploy disk zap "$n":"$i"
  done
done

# prepare disks
for i in "${osd[@]}"; do
  for n in "${anodes[@]}"; do
    ceph-deploy --overwrite-conf osd prepare "$n":"$i"
  done
done 

# activate disks
for i in "${osd[@]}"; do
  for n in "${anodes[@]}"; do
    ceph-deploy osd activate "$n":"$i"1
  done
done 

